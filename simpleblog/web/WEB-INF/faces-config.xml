<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <managed-bean>
        <managed-bean-name>memberController</managed-bean-name>
        <managed-bean-class>com.corejsf.MemberController</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>member</managed-bean-name>
        <managed-bean-class>com.corejsf.Member1</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>post</managed-bean-name>
        <managed-bean-class>com.corejsf.Post</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>listpost</managed-bean-name>
        <managed-bean-class>com.corejsf.ListPost</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>listComment</managed-bean-name>
        <managed-bean-class>com.corejsf.ListComment</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>commentAdd</managed-bean-name>
        <managed-bean-class>com.corejsf.CommentAdd</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>postview</managed-bean-name>
        <managed-bean-class>com.corejsf.PostView</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>postedit</managed-bean-name>
        <managed-bean-class>com.corejsf.PostEdit</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>comment</managed-bean-name>
        <managed-bean-class>com.corejsf.Comment</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>database</managed-bean-name>
        <managed-bean-class>com.corejsf.Database</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>postController</managed-bean-name>
        <managed-bean-class>com.corejsf.PostController</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>login</managed-bean-name>
        <managed-bean-class>com.corejsf.Login</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <from-view-id>login.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{login.startLogin}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>index.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-action>#{login.startLogin}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>failure.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>failure.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{login.startLogin}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>index.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-action>#{login.startLogin}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>failure.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{login.startLogout}</from-action>
            <from-outcome>logout</from-outcome>
            <to-view-id>index.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>add_post.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{login.startLogout}</from-action>
            <from-outcome>logout</from-outcome>
            <to-view-id>index.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>add_user.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{login.startLogout}</from-action>
            <from-outcome>logout</from-outcome>
            <to-view-id>index.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>failure.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{login.startLogout}</from-action>
            <from-outcome>logout</from-outcome>
            <to-view-id>index.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>soft_deleted.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{login.startLogout}</from-action>
            <from-outcome>logout</from-outcome>
            <to-view-id>index.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>unpublished.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{login.startLogout}</from-action>
            <from-outcome>logout</from-outcome>
            <to-view-id>index.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>user.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{login.startLogout}</from-action>
            <from-outcome>logout</from-outcome>
            <to-view-id>index.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <managed-bean>
        <managed-bean-name>listMember</managed-bean-name>
        <managed-bean-class>com.corejsf.ListMember</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>currentDate</managed-bean-name>
        <managed-bean-class>com.corejsf.CurrentDate</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
</faces-config>
